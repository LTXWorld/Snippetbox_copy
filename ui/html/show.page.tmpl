{{template "base" .}}

{{define "title"}}Snippet #{{.Snippet.ID}}{{end}}

{{define "body"}}
    {{with .Snippet}}
    <div class='snippet'>
        <div class='metadata'>
            <strong>{{.Title}}</strong>
            <span>#{{.ID}}</span>
        </div>
        <pre><code>{{.Content}}</code></pre>
    </div>
    {{end}}
    <!--   如果有图片，展示图片     -->
    {{if .Images}}
    <h3>盒子中的图片:</h3>
    <div class="images" style="display: flex; justify-content: center; flex-wrap: wrap">
        {{range .Images}}
        <img src="/uploads/{{.}}" alt="Snippet Image" style="max-width: 300px;">
        {{end}}
    </div>
    {{end}}

    {{with .Snippet}}
    <div class='metadata'>
        <time>Created: {{humanDate .Created}}</time>
        <time>Expires: {{.Expires}}</time>
    </div>
    {{end}}

{{end}}